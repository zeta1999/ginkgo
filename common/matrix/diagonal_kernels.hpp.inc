{
    const auto tidx = thread::get_thread_id_flat();
    const auto row = tidx / num_cols;
    const auto col = tidx % num_cols;

    if (row < num_rows) {
        result_values[row * result_stride + col] =
            source_values[row * source_stride + col] * diag[col];
    }
}


